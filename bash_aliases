#!/usr/bin/env bash

# File system nav shortcuts
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# Git + GitHub
alias g="git"
alias ga="git add"
alias gc="git commit -m"


# Allow aliases to be run as super user
alias sudo="sudo "

# Personal preference
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias rm='rm -i'
alias update='sudo apt update && sudo apt upgrade -y'
alias c='clear'
alias cs='clear;ls'
alias root='cd /'
alias home='cd ~'
alias v='vim'
alias quietly='> /dev/null 2>&1'
